<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.Design.Client.Thanks.CThanksController">
   <children>
      <VBox alignment="CENTER" spacing="20.0" AnchorPane.bottomAnchor="100.0" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0" AnchorPane.topAnchor="100.0">
         <children>
            <Label fx:id="thankContent" text="Sự đánh giá của bạn có ý nghĩa rất lớn với chúng tôi. chúc bạn một ngày tốt lành" textAlignment="CENTER" wrapText="true">
               <font>
                  <Font size="30.0" />
               </font>
            </Label>
            <VBox fx:id="rewardInfo" alignment="CENTER" spacing="7.0" visible="false">
               <children>
                  <Label text="Thông tin mã thưởng đến bạn." />
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Label text="Tên mã thưởng:" textFill="RED" />
                        <Label fx:id="nameReward" text="Label" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Label text="Mã Thưởng:" textFill="RED" />
                        <Label fx:id="codeReward" text="Label" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Label text="Ngày hết hạn:" textFill="RED" />
                        <Label fx:id="expiredDate" text="Label" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <HBox alignment="CENTER">
               <children>
                  <Button fx:id="back" mnemonicParsing="false" prefHeight="40.0" prefWidth="150.0" text="Quay lại">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
      <AnchorPane prefHeight="100.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <fx:include source="../../Common/Company.fxml" AnchorPane.leftAnchor="30.0" AnchorPane.topAnchor="30.0" />
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
